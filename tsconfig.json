{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES2022",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "lib": ["es2015"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true
  },
  "ts-node": {
    "esm": true
  },
  "exclude": ["remotion.config.ts"]
}
